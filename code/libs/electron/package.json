{
  "name": "@uiharness/electron",
  "version": "0.0.4",
  "main": "src/main/.parcel/main.js",
  "bin": {
    "uiharness-electron": "./lib/bin/entry.js"
  },
  "scripts": {
    "start": "run-p -r parcel:launch electron:launch",
    "dist": "run-s parcel:build \"electron:build {@}\" --",
    "electron:launch": "run-s parcel:main electron:start",
    "electron:start": "electron .",
    "electron:build": "build --x64 --publish=never",
    "parcel:launch": "parcel src/renderer/index.html --port 8800 --out-dir src/renderer/.parcel/development",
    "parcel:build": "run-s parcel:main parcel:renderer",
    "parcel:main": "parcel build src/main/main.ts --out-dir src/main/.parcel --out-file main --target electron",
    "parcel:renderer": "parcel build src/renderer/index.html --public-url ./ --out-dir src/renderer/.parcel/production",
    "build": "sh ./node_modules/@tdb/typescript/sh/build.sh --project tsconfig.lib.json $@",
    "lint": "sh ./node_modules/@tdb/typescript/sh/lint.sh $@",
    "clean": "sh ./sh/clean.sh",
    "nuke": "sh ./sh/nuke.sh"
  },
  "dependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "@tdb/log": "1.1.17",
    "@tdb/typescript": "3.2.5",
    "@tdb/util": "1.9.22",
    "@uiharness/core": "1.0.2",
    "app-root-path": "2.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.5",
    "electron-is-dev": "1.0.1",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.11.0",
    "yargs": "12.0.5"
  },
  "files": [
    "**/*"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/yargs": "^12.0.5"
  }
}
