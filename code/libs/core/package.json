{
  "name": "@uiharness/core",
  "description": "The core UIHarness dev-tools for Electron and the Web (include in devDependencies).",
  "version": "1.1.1",
  "main": "./lib/index.js",
  "bin": {
    "uiharness": "./lib/bin/entry.js"
  },
  "scripts": {
    "test": "sh ./node_modules/@tdb/test/sh/test.sh",
    "tdd": "yarn run test --reporter min --watch",
    "build": "sh ./node_modules/@tdb/typescript/sh/build.sh $@",
    "lint": "sh ./node_modules/@tdb/typescript/sh/lint.sh $@",
    "clean": "sh ./sh/clean.sh",
    "nuke": "sh ./sh/nuke.sh",
    "prepare": "yarn build && yarn lint && yarn test"
  },
  "dependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "@tdb/log": "1.1.20",
    "@tdb/util": "1.9.26",
    "@uiharness/types": "0.0.11",
    "babel-core": "^7.0.0-bridge.0",
    "create-tmpl": "0.0.33",
    "electron": "4.0.1",
    "electron-builder": "20.38.5",
    "execa": "1.0.0",
    "filesize": "4.0.0",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.11.0",
    "serve": "10.1.1",
    "yargs": "12.0.5"
  },
  "devDependencies": {
    "@tdb/typescript": "3.2.8",
    "@tdb/test": "1.2.13",
    "@types/electron-builder": "2.8.0",
    "@types/execa": "0.9.0",
    "@types/filesize": "^4.0.0",
    "@types/parcel-bundler": "1.10.1",
    "@types/yargs": "12.0.5"
  },
  "engines": {
    "node": ">=10.x"
  },
  "files": [
    "lib",
    "tmpl"
  ],
  "keywords": [
    "design",
    "test",
    "react",
    "typescript",
    "electron"
  ],
  "license": "MIT"
}
